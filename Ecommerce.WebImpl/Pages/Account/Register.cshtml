@page
@using Ecommerce.Entity
@using Ecommerce.WebImpl.Pages.Shared
@model Register
@inject EntityMapper EntityMapper
@{
    ViewData["Title"] = "Kaydol";
}

<!DOCTYPE html>

<html lang="tr">
<head>
    <title>Kayıt Ol</title>
</head>
<body>
<div class="container text-center">
    <div>
        <h2>Kullanıcı Hesabı Aç</h2>
        <div class="tab-content mt-2" id="formsContent">
            <div class="tab-pane fade show active" id="userForm" role="tabpanel">
                <form asp-page="/Account/Register" asp-page-handler="User" class="m-3">
                    @EntityMapper.GetFormInputs(nameof(Register.FormCustomer), typeof(Customer), ["Email"], ["Active"])
                    <button type="submit" class="btn-primary">Kayıt Ol</button>
                </form>
            </div>
            <div class="tab-pane fade" id="sellerForm" role="tabpanel">
                <form asp-page="/Account/Register" asp-page-handler="Seller" class="m-3">
                    @EntityMapper.GetFormInputs(nameof(Register.FormSeller), typeof(Seller), ["Email"], ["Active"])
                    <button type="submit" class="btn-primary">Kayıt Ol</button>
                </form>
            </div>
        </div>
        <ul class="nav nav-tabs" id="forms" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="tab1-tab" data-bs-toggle="tab" data-bs-target="#userForm" type="button" role="tab">Kullanıcı Hesabı Aç</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-bs-target="#sellerForm" type="button" role="tab">Satıcı Hesabı Aç</button>
            </li>
        </ul>
        <p>Satıcı hesabı açmak için tıkla <a></a></p>
    </div>
</div>
</body>
</html>