@page
@using Ecommerce.Entity
@using Ecommerce.WebImpl.Pages.Shared
@model Login
@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    body {
        background-color: var(--bs-light);
    }
    .login-container {
        width: 100%;
        max-width: 800px;
    }
    .login-card {
        background: white;
        border: 2px solid #343a40;
        border-radius: 8px;
        padding: 3rem 4rem 2.5rem 4rem;
    }
    .nav-tabs .nav-link {
        color: #6c757d;
    }
    .nav-tabs .nav-link.active {
        background-color: #fd7e14;
        border-color: #fd7e14;
        color: white;
    }

</style>

<div class="login-container px-5 container-fluid d-flex align-content-center justify-content-center align-items-center" style="min-height: 70vh !important;">
    <div class="login-card">
        <div class="text-center">
            <h2 class="mb-4">Giriş Yap</h2>
            <ul class="nav nav-tabs mb-4" id="forms" role="tablist">
            @{ 
                var userTypes = new[] { 
                    new { Name = "Customer", Display = "Müşteri" },
                    new { Name = "Seller", Display = "Satıcı" },
                    new { Name = "Staff", Display = "Çalışan" }
                };
                var first = true;
            }
            @foreach (var userType in userTypes){
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(first?"active":"")" id="@(userType.Name)-tab" type="button" onclick="setUserType('@userType.Name')">@userType.Display Girişi</button>
                </li>
                first = false;
            }
            </ul>
            
            <div class="tab-content" id="formsContent">
                <form hx-post="/Account/Login" hx-swap="innerHTML" hx-target="#loginResult" method="post" class="mt-4">
                    <input type="hidden" name="UserType" id="userTypeInput" value="Customer" />
                    
                    <div class="mb-3">
                        <label class="form-label">E-Posta</label>
                        <input type="email" class="form-control" name="LoginCredentials.Email" placeholder="E-posta adresinizi girin" required />
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label">Şifre</label>
                        <input type="password" class="form-control" name="LoginCredentials.Password" placeholder="Şifrenizi girin" required />
                    </div>
                    
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" name="@nameof(Login.RememberMe)" value="true" id="rememberMe"/>
                        <label class="form-check-label" for="rememberMe">
                            Beni Hatırla
                        </label>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg shadow" style="background-color: darkorange;">Giriş Yap</button>
                    </div>
                </form>
                
                <div class="mt-3">
                    <div class="d-grid">
                        <a href="#" onclick="loginWithGoogle()" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-google me-2"></i>Google ile Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
            
            <div id="loginResult" class="mt-4"></div>
        </div>
    </div>
</div>

<script>
function setUserType(userType) {
    document.getElementById('userTypeInput').value = userType;
    
    // Update active tab
    document.querySelectorAll('.nav-link').forEach(tab => tab.classList.remove('active'));
    document.getElementById(userType + '-tab').classList.add('active');
}

function loginWithGoogle() {
    const userType = document.getElementById('userTypeInput').value;
    window.location.href = `/Account/Login?handler=Google&UserType=${userType}`;
}
</script>
