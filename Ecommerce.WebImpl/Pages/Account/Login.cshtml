@page
@using Ecommerce.Entity
@using Ecommerce.WebImpl.Pages.Shared
@model Login
@inject EntityMapper EntityMapper
@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    body {
        background-color: #6c757d;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 5vh;
    }
    .login-container {
        width: 100%;
        max-width: 800px;
    }
    .login-card {
        background: white;
        border: 2px solid #343a40;
        border-radius: 8px;
        padding: 3rem 4rem 2.5rem 4rem;
    }
    .nav-tabs .nav-link {
        color: #6c757d;
    }
    .nav-tabs .nav-link.active {
        background-color: #fd7e14;
        border-color: #fd7e14;
        color: white;
    }
    .btn-primary {
        background-color: #fd7e14;
        border-color: #fd7e14;
    }
    .btn-primary:hover {
        background-color: #e8690b;
        border-color: #e8690b;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="text-center">
            <h2 class="mb-4">Giriş Yap</h2>
            <ul class="nav nav-tabs mb-4" id="forms" role="tablist">
            @{ var first = true;}
            @foreach (var userType in new[]{ typeof(Customer), typeof(Entity.Seller), typeof(Staff) }){
                var displayName = userType.Name == "Customer" ? "Müşteri" : userType.Name == "Seller" ? "Satıcı" : "Çalışan";
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(first?"active":"")" id="@(userType.Name)-tab" data-bs-toggle="tab" data-bs-target="#@(userType.Name)" type="button" role="tab">@displayName Girişi</button>
                </li>
                first = false;
            }
            </ul>
            
            <div class="tab-content" id="formsContent">
                @{ first = true;}
                @foreach(var userType in new[]{typeof(Customer), typeof(Entity.Seller), typeof(Staff)}){
                    <div class="tab-pane fade show @(first? "active" : "")" id="@userType.Name" role="tabpanel">
                        <form hx-post="/Account/Login?handler=@userType.Name" hx-swap="innerHTML" hx-target="#loginResult" method="post" class="mt-4">
                            <div class="mb-3">
                                <label class="form-label">E-Posta</label>
                                <input type="email" class="form-control" name="LoginCredentials.Email" placeholder="E-posta adresinizi girin" required />
                            </div>
                            
                            <div class="mb-4">
                                <label class="form-label">Şifre</label>
                                <input type="password" class="form-control" name="LoginCredentials.Password" placeholder="Şifrenizi girin" required />
                            </div>
                            
                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" name="@nameof(Login.RememberMe)" value="true" id="rememberMe@(userType.Name)"/>
                                <label class="form-check-label" for="rememberMe@(userType.Name)">
                                    Beni Hatırla
                                </label>
                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                            </div>
                        </form>
                    </div>
                    first = false;
                }
            </div>
            
            <div id="loginResult" class="mt-4"></div>
        </div>
    </div>
</div>
