@page
@using Ecommerce.Entity
@using Ecommerce.WebImpl.Pages.Account
@using Ecommerce.WebImpl.Pages.Shared
@model Ecommerce.WebImpl.Pages.User
@{
    ViewData["Title"] = Model.CurrentCustomer!=null?"Hesabınız": Model.ViewedUser.FullName+" Kullanıcısının Profili";
    ViewData["BgColor"] = "bg-primary";
    ViewData[nameof(Entity.User)] = Model.CurrentUser;
    var isOwner = Model.CurrentCustomer?.Id == Model.ViewedUser.Id;
    var editable = isOwner || (Model.CurrentStaff?.HasPermission(Permission.EditUser) ?? false);
    var deletable = Model.CurrentStaff?.HasPermission(Permission.DeleteUser) ?? false;
}
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/echarts@5/dist/echarts.min.js"></script>
    <script>
        let profilePic;
        document.addEventListener("DOMContentLoaded", ()=>{
            profilePic = document.getElementById('profilePic');
        });
        let imageDeleted = false;
        @if (Model.ViewedUser is Entity.Customer c){
            <text>
            function assignAddressInputs() {
                @Utils.GenerateAssignAddressInputsFunction(c.Addresses.Count)
            }
            </text>
        }
        let editableProfileElements; 
        document.addEventListener("DOMContentLoaded", ()=>{
            editableProfileElements = document.querySelectorAll('#profil@(Model.UserId) .edit-control');  
        });
    </script>
}
@{
     var fieldIdPrefix = "customer-";
}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0 text-center">
                        <i class="fas fa-user-circle me-2"></i>@Model.ViewedUser.FirstName @Model.ViewedUser.LastName
                    </h3>
                </div>
                <div class="card-body p-0">
                    <!-- Header Section -->
                    <div class="bg-light border-bottom p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-3">
                                @if (Model.ViewedUser.ProfilePicture?.Data != null){
                                    <img class="rounded-circle border" style="width: 80px; height: 80px;" src="@(Utils.GetImageUrlOrDefault(Model.ViewedUser.ProfilePicture?.Data, false))" alt="Profile Resmi">
                                }
                                else{
                                    <img src="user-icon.svg" class="rounded-circle border" style="width: 80px; height: 80px;" alt="Profil Resmi"/>
                                }
                                <div>
                                    <h4 class="mb-1 fw-bold text-dark">@Model.ViewedUser.FirstName @Model.ViewedUser.LastName</h4>
                                    <p class="mb-0 text-muted">Müşteri Hesabı</p>
                                    <small class="text-muted">@Model.ViewedUser.Email</small>
                                </div>
                            </div>
                            @if (Model.ViewedUser is Entity.Seller seller){
                                <a asp-page="/Seller" asp-route-Id="@seller.Id" class="btn btn-outline-warning text-decoration-none">
                                    <i class="bi bi-shop me-2"></i>Mağazanı Görüntüle
                                </a>
                            }
                        </div>
                    </div>
        
                    <!-- Tab Navigation -->
                    <ul class="nav nav-tabs nav-justified" id="userTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active py-3" id="statistics-tab" data-bs-toggle="tab" data-bs-target="#v-pills-statistics" type="button" role="tab" aria-controls="v-pills-statistics" aria-selected="true">
                                <i class="bi bi-graph-up me-2"></i>İstatistikler
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link py-3" id="profile-tab" data-bs-toggle="tab" data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                                <i class="bi bi-person me-2"></i>Profil
                            </button>
                        </li>
                        @if (editable){
                            <li class="nav-item" role="presentation">
                                <button class="nav-link py-3" id="security-tab" data-bs-toggle="tab" data-bs-target="#v-pills-security" type="button" role="tab" aria-controls="v-pills-security" aria-selected="false">
                                    <i class="bi bi-shield-lock me-2"></i>Güvenlik
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link py-3" id="orders-tab" data-bs-toggle="tab" data-bs-target="#v-pills-orders" type="button" role="tab" aria-controls="v-pills-orders" aria-selected="false">
                                    <i class="bi bi-bag me-2"></i>@(Model.CurrentCustomer != null ? "Siparişlerim" : "Siparişler")
                                </button>
                            </li>
                        }
                    </ul>
                    
                    <!-- Tab Content -->
                    <div class="tab-content" id="v-pills-tabContent">
                        <!-- Statistics Tab -->
                        <div class="tab-pane fade show active" id="v-pills-statistics" role="tabpanel">
                            <div class="p-4">
                                <div class="mb-4">
                                    <h5 class="text-muted mb-3">Hesap İstatistikleri</h5>
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <div class="card border h-100">
                                            <div class="card-body text-center p-4">
                                                <i class="bi bi-bag-check text-primary fs-1 mb-3"></i>
                                                <h6 class="fw-semibold text-muted">Toplam Sipariş</h6>
                                                <h4 class="text-dark mb-0">-</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card border h-100">
                                            <div class="card-body text-center p-4">
                                                <i class="bi bi-heart text-danger fs-1 mb-3"></i>
                                                <h6 class="fw-semibold text-muted">Favoriler</h6>
                                                <h4 class="text-dark mb-0">-</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card border h-100">
                                            <div class="card-body text-center p-4">
                                                <i class="bi bi-star text-warning fs-1 mb-3"></i>
                                                <h6 class="fw-semibold text-muted">Değerlendirmeler</h6>
                                                <h4 class="text-dark mb-0">-</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Profile Tab -->
                        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" data-editing="0">
                            <div class="p-4">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div>
                                        <h5 class="text-muted mb-1">Profil Bilgileri</h5>
                                        <p class="text-muted mb-0">Kişisel bilgilerinizi yönetin</p>
                                    </div>
                                    @if (editable){
                                        <button id="profileEditBtn" class="btn btn-outline-primary"
                                                onclick="if(document.getElementById('v-pills-profile').dataset.editing=='0'){
                                                    event.currentTarget.innerHTML='<i class=\'bi bi-x-circle me-2\'></i>İptal';
                                                    event.currentTarget.className='btn btn-outline-danger';
                                                    document.getElementById('v-pills-profile').dataset.editing='1';
                                                } else {
                                                    event.currentTarget.innerHTML = '<i class=\'bi bi-pencil me-2\'></i>Düzenle';
                                                    event.currentTarget.className='btn btn-outline-primary';
                                                    document.getElementById('v-pills-profile').dataset.editing='0';
                                                }
                                                editableProfileElements.forEach(e=>e.classList.toggle('edit-control'));
                                                document.getElementById('profileSaveButton').classList.remove('d-none');">
                                            <i class="bi bi-pencil me-2"></i>Düzenle
                                        </button>
                                    }
                                </div>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        @await Html.PartialAsync("Account/_ProfilePartial", new _ProfilePartial(){
                                            Editable = editable, User = Model.ViewedUser,PostUrl = "/" + nameof(Pages.User)+"?handler=update"
                                        })
                                    </div>
                                </div>
                                <div class="text-center mt-4">
                                    <button id="profileSaveButton" onclick="document.getElementById('v-pills-profile').dataset.editing='0'; 
                                        event.currentTarget.classList.add('d-none');
                                        submitProfile()" 
                                            class="btn btn-success w-100 d-none">
                                        <i class="bi bi-check-circle me-2"></i>Kaydet
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        @if (editable){
                            <!-- Security Tab -->
                            <div class="tab-pane fade" id="v-pills-security" role="tabpanel">
                                <div class="p-4">
                                    <div class="mb-4">
                                        <h5 class="text-muted mb-1">Güvenlik Ayarları</h5>
                                        <p class="text-muted mb-0">Hesap güvenliğinizi yönetin</p>
                                    </div>
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            @await Html.PartialAsync("Account/_SecurityPartial", new _SecurityPartial(){
                                                ViewedUser = Model.CurrentUser
                                            })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Orders Tab -->
                            <div class="tab-pane fade" id="v-pills-orders" role="tabpanel">
                                <div class="p-4">
                                    <div class="mb-4">
                                        <h5 hx-get="/@nameof(Pages.Customer)?handler=orders&@(nameof(Pages.Customer.CustomerId))=@(Model.ViewedUser.Id)&pageSize=5&page=1" hx-trigger="revealed" hx-swap="afterend" hx-target="this" class="text-muted mb-1">Siparişler@(Model.CurrentCustomer != null ? "im" : "")</h5>
                                        <p class="text-muted mb-0">Sipariş geçmişinizi görüntüleyin</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
