@page
@using Ecommerce.Entity
@using Ecommerce.WebImpl.Pages.Account
@using Ecommerce.WebImpl.Pages.Shared
@model Ecommerce.WebImpl.Pages.Customer
@{
    ViewData["Title"] = Model.CurrentCustomer!=null?"Hesabınız": Model.ViewedCustomer.FullName+" Kullanıcısının Profili";
    ViewData["BgColor"] = "bg-primary";
    ViewBag.User = Model.CurrentUser;
    var isOwner = Model.CurrentCustomer?.Id == Model.ViewedCustomer.Id;
    var editable = isOwner || (Model.CurrentStaff?.HasPermission(Permission.EditUser) ?? false);
    var deletable = Model.CurrentStaff?.HasPermission(Permission.DeleteUser) ?? false;
}
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/echarts@5/dist/echarts.min.js"></script>
    <script>
        let profilePic;
        document.addEventListener("DOMContentLoaded", ()=>{
            profilePic = document.getElementById('profilePic');
        });
        let imageDeleted = false;
        function assignAddressInputs(){
            @Utils.GenerateAssignAddressInputsFunction(Model.ViewedCustomer.Addresses.Count)
        }
        let editableProfileElements; 
        document.addEventListener("DOMContentLoaded", ()=>{
            editableProfileElements = document.querySelectorAll('#profil@(Model.CustomerId) .edit-control');  
        });
    </script>
}
@{
     var fieldIdPrefix = "customer-";
}
<div class="container-fluid p-4">
    <div class="card shadow-lg bg-white">
        <!-- Header Section -->
        <div class="card-header bg-white border-bottom">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    @if (Model.ViewedCustomer.ProfilePicture?.Data != null){
                        <img class="rounded-circle" src="@(Utils.GetImageUrlOrDefault(Model.ViewedCustomer.ProfilePicture?.Data, false))" alt="Profile Resmi" style="height: 80px; width: 80px;">
                    }
                    else{
                        <img src="user-icon.svg" style="height: 80px; width: 80px;" alt="Profil Resmi" class="rounded-circle"/>
                    }
                    <div>
                        <h2 class="mb-0 fw-bold">@Model.ViewedCustomer.FirstName @Model.ViewedCustomer.LastName</h2>
                        <p class="text-muted mb-0">Müşteri Hesabı</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="card-body p-0">
            <div class="row g-0">
                <!-- Sidebar Navigation -->
                <div class="col-3 border-end bg-light">
                    <div class="nav flex-column nav-pills p-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <button class="nav-link active text-start mb-2" id="v-pills-statistics-tab" data-bs-toggle="pill" data-bs-target="#v-pills-statistics" type="button" role="tab">
                            <i class="bi bi-graph-up me-2"></i>İstatistikler
                        </button>
                        <button class="nav-link text-start mb-2" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile" type="button" role="tab">
                            <i class="bi bi-person me-2"></i>Profil
                        </button>
                        @if (editable){
                            <button class="nav-link text-start mb-2" id="v-pills-security-tab" data-bs-toggle="pill" data-bs-target="#v-pills-security" type="button" role="tab">
                                <i class="bi bi-shield-lock me-2"></i>Güvenlik
                            </button>
                            <button class="nav-link text-start mb-2" id="v-pills-orders-tab" data-bs-toggle="pill" data-bs-target="#v-pills-orders" type="button" role="tab">
                                <i class="bi bi-bag me-2"></i>@(Model.CurrentCustomer != null ? "Siparişlerim" : "Siparişler")
                            </button>
                        }
                    </div>
                </div>
                
                <!-- Content Area -->
                <div class="col-9">
                    <div class="tab-content p-4" id="v-pills-tabContent">
                        <!-- Statistics Tab -->
                        <div class="tab-pane fade show active" id="v-pills-statistics" role="tabpanel">
                            <h3 class="fw-bold mb-4">İstatistikler</h3>
                            <div class="card-body">
                                <!-- Statistics content will go here -->
                            </div>
                        </div>
                        
                        <!-- Profile Tab -->
                        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" data-editing="0">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h3 class="fw-bold mb-0">Profil Bilgileri</h3>
                                @if (editable){
                                    <button id="profileEditBtn" class="btn text-white" style="background-color: #fd7e14; border-color: #fd7e14;"
                                            onclick="if(document.getElementById('v-pills-profile').dataset.editing=='0'){
                                                event.currentTarget.innerHTML='İptal';
                                                document.getElementById('v-pills-profile').dataset.editing='1';
                                            } else {
                                                event.currentTarget.innerHTML = 'Düzenle';
                                                document.getElementById('v-pills-profile').dataset.editing='0';
                                            }
                                            editableProfileElements.forEach(e=>e.classList.toggle('edit-control'));
                                            event.currentTarget.style.backgroundColor = event.currentTarget.style.backgroundColor === 'rgb(253, 126, 20)' ? '#dc3545' : '#fd7e14';
                                            event.currentTarget.style.borderColor = event.currentTarget.style.borderColor === 'rgb(253, 126, 20)' ? '#dc3545' : '#fd7e14';
                                            document.getElementById('profileSaveButton').classList.remove('d-none');">Düzenle</button>
                                }
                            </div>
                            @await Html.PartialAsync("Account/_ProfilePartial", new _ProfilePartial(){
                                Editable = editable, User = Model.ViewedCustomer, IsOwner = isOwner
                            })
                            <div class="text-center mt-4">
                                <button id="profileSaveButton" onclick="document.getElementById('v-pills-profile').dataset.editing='0'; 
                                    event.currentTarget.classList.add('d-none');
                                    document.getElementById('profil@(Model.CustomerId)Form').dispatchEvent(new Event('submit', {bubbles:true, cancelable:true}))" 
                                        class="btn btn-success d-none px-4">Kaydet</button>
                            </div>
                        </div>
                        
                        @if (editable){
                            <!-- Security Tab -->
                            <div class="tab-pane fade" id="v-pills-security" role="tabpanel">
                                <h3 class="fw-bold mb-4">Güvenlik Ayarları</h3>
                                @await Html.PartialAsync("Account/_SecurityPartial", new _SecurityPartial(){
                                    ViewedUser = Model.CurrentUser
                                })
                            </div>
                            
                            <!-- Orders Tab -->
                            <div class="tab-pane fade" id="v-pills-orders" role="tabpanel">
                                <h3 hx-get="/@(nameof(Customer))?handler=orders&CustomerId=@(Model.ViewedCustomer.Id)" hx-trigger="revealed" hx-swap="afterend" hx-target="this" class="fw-bold mb-4">Siparişler@(Model.CurrentCustomer != null ? "im" : "")</h3>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
