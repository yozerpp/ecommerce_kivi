@page
@using Ecommerce.Entity
@using Ecommerce.WebImpl.Pages.Shared
@using Ecommerce.WebImpl.Pages.Shared.Product
@using Ecommerce.WebImpl.Pages.Shared.SearchBar
@using Microsoft.AspNetCore.Html
@using Stripe
@using Product = Ecommerce.WebImpl.Pages.Product
@inject IDictionary<uint,Category> Categories;
@model AddProduct
@{
    ViewBag.User = Model.CurrentUser;
    ViewBag.Title = "Yeni Ürün Ekle";
}
@section Scripts{
    <script>
        ((s)=>{
           document.addEventListener('DOMContentLoaded', load);
           function  load (){
               document.getElementById('productList').addEventListener('productSelected', e=>{
                   console.log('selected product ' + e.detail.productId);
                   document.getElementById('offerpid').value = e.detail.productId;
               })
           }
        })(document.currentScript)
    </script>
}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0 text-center">
                        <i class="fas fa-plus-circle me-2"></i>Ürün İlanı Ver
                    </h3>
                </div>
                <div class="card-body p-0">
                    <!-- Tab Navigation -->
                    <ul class="nav nav-tabs nav-justified" id="productTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active py-3" id="existing-tab" data-bs-toggle="tab" data-bs-target="#existing-product" type="button" role="tab" aria-controls="existing-product" aria-selected="true">
                                <i class="fas fa-search me-2"></i>Varolan Bir Ürünü Ekle
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link py-3" id="new-tab" data-bs-toggle="tab" data-bs-target="#new-product" type="button" role="tab" aria-controls="new-product" aria-selected="false">
                                <i class="fas fa-plus me-2"></i>Yeni Bir Ürün Oluştur
                            </button>
                        </li>
                    </ul>
                    
                    <!-- Tab Content -->
                    <div class="tab-content" id="productTabsContent">
                        <div class="tab-pane fade show active" id="existing-product" role="tabpanel" aria-labelledby="existing-tab">
                            <div class="p-4">
                                <div class="mb-4">
                                    <h5 class="text-muted mb-3">Ürün Ara</h5>
                                    @await Html.PartialAsync("Shared/SearchBar/_SearchBarPartial", new _SearchBarPartial(){
                                        Categories = Model.Categories.Values,Target = "#productList", ViewType = HomepageModel.ViewType_.List	
                                    })
                                </div>
                                
                                <div class="card bg-light mb-4">
                                    <div class="card-header">
                                        <h6 class="mb-0">Teklif Bilgileri</h6>
                                    </div>
                                    <div class="card-body">
                                        <form   hx-post="/Seller/AddProduct?handler=addExisting" hx-target="#addExistingResult" hx-swap="innerHTML">
                                            @Html.AntiForgeryToken()
                                            <input id="offerpid" type="hidden" name="@(nameof(AddProduct.NewOffer)).@(nameof(ProductOffer.ProductId))"/>
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <label class="form-label fw-semibold">Fiyat (₺)</label>
                                                    <input class="form-control" type="number" step="0.1" name="@(nameof(Model.NewOffer.Price))" placeholder="0.00" required/>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="form-label fw-semibold">İndirim (%)</label>
                                                    <input class="form-control" type="number" step="0.01" min="0" max="100" name="@(nameof(Model.NewOffer.Discount))" placeholder="0"/>
                                                </div>
                                                <div class="col-12">
                                                    <button type="submit" class="btn btn-success w-100">
                                                        <i class="fas fa-plus me-2"></i>Teklif Oluştur
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                
                                <div class="border rounded" style="max-height: 400px; overflow-y: auto;">
                                    <div id="productList" class="p-3">
                                    </div>
                                </div>
                                
                                <div id="addExistingResult" class="mt-3"></div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="new-product" role="tabpanel" aria-labelledby="new-tab">
                            <div class="p-4">
                                <div class="mb-4">
                                    <h5 class="text-muted mb-3">Kategori Seçimi</h5>
                                        <div class="dropdown px-3 bg-white border-0">    
                                            <script>
                                                ((s)=>{
                                                    const parent = s.parentElement;
                                                    document.addEventListener('DOMContentLoaded', ()=>{
                                                        const p=s.nextElementSibling.nextElementSibling.firstElementChild;
                                                        parent._promptCopy = document.getElementById('productTemplate').firstElementChild.cloneNode(true);
                                                        p.addEventListener('change', (e)=>{
                                                            if(p.dataset.id==='0'){
                                                                document.getElementById('createCategory').classList.remove('d-none');
                                                                document.getElementById('productTemplate').innerHTML = '';
                                                                document.getElementById('productTemplate').appendChild(parent._promptCopy);
                                                            } else {
                                                                document.getElementById('createCategory').classList.add('d-none');
                                                                htmx.ajax('GET', '/Seller/@(nameof(AddProduct))?handler=template&categoryId='+ p.dataset.id, {
                                                                    target: '#productTemplate',
                                                                    swap: 'innerHTML',
                                                                })
                                                            }
                                                            s.nextElementSibling.innerHTML = p.dataset.name;
                                                        });     
                                                    })
                                                })(document.currentScript)
                                        </script>
                                        <button data-bs-toggle="dropdown" aria-expanded="false" class="dropdown-toggle btn btn-sm btn-primary" style="background-color: darkorange">Seçiniz</button>
                                        <div class="dropdown-menu">
                                            @await Html.PartialAsync("Shared/SearchBar/_CategoryPicker", new _CategoryPicker(Categories.Values, "categoryPickerSeller"){ AllowNonSelection = true, NonSelectionText = "Yeni Kategori" })
                                        </div>
                                    </div>
                                </div>
                                    <div id="createCategory" class="container-fluid d-none border rounded p-3 bg-white">
                                        @await Html.PartialAsync("Seller/_CreateCategoryPartial", new _CreateCategoryPartial(){
                                            Categories = Model.Categories.Values,
                                            ForProductTemplate = true, Target = "#productTemplate"
                                        })
                                    </div>
                                    <div id="productTemplate">
                                        <div class="text-center text-muted py-5">
                                            <i class="fas fa-arrow-up fa-2x mb-3"></i>
                                            <p>Kategori Seçin veya Oluşturun</p>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
