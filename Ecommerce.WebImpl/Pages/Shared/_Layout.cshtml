@using Ecommerce.Bl.Interface
@using Ecommerce.Entity
@inject IDictionary<uint,Category> Categories
@using Ecommerce.WebImpl.Components
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Ecommerce Sandbox</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Ecommerce.WebImpl.styles.css" asp-append-version="true"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script src="_framework/blazor.server.js" autostart="false"></script>
    <script>
      Blazor.start({
        ssr: { disableDomPreservation: true }
      });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    <base href="~/" />
    <component type="typeof(Microsoft.AspNetCore.Components.Web.HeadOutlet)" 
               render-mode="ServerPrerendered" />
</head>
<body>
<header>
    <div id="popupResult" class="position-fixed end-0 z-3" style="z-index: 9999;margin-top: 4rem;"></div>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow px-0 mx-0 mb-3">
        <div class="d-flex justify-content-center flex-fill flex-grow-1 align-items-center align-content-center ps-5" style="padding-right: 5%">
            <a class="navbar-brand me-4 d-inline-flex justify-content-center align-content-center align-items-center" asp-area="" asp-page="/Index">Ecommerce Sandbox<i style="color: orange" class="ms-2 bi bi-boxes hover-grow-small fs-2 "></i></a>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <!-- search -->
                    <li class="nav-item flex-grow-1">
                        <partial name="SearchBar/_SearchBarPartial" model="new _SearchBarPartial(){Categories=Categories.Values, ViewType = HomepageModel.ViewType_.Page}"/>
                    </li>
                </ul>
                <div class="ms-3">
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3" style="background-color: @(ViewData.ContainsKey("BgColor")?ViewData["BgColor"]:"bg-white")">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        <a href="https://github.com/yozerpp/ecommerce_kivi" class="text-decoration-none text-dark hover-underline">EcommerceSandbox - Github Repo<i class="bi bi-github ms-2"></i></a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://unpkg.com/htmx.org"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<script>
    document.addEventListener("DOMContentLoaded", ()=>{
        document.querySelectorAll("[data-bs-toggle='tooltip']").forEach(e=>new bootstrap.Tooltip(e));
    })
</script>
<persist-component-state persist-mode="PersistenceMode.Server"/>
</body>
</html>
