@model Ecommerce.WebImpl.Pages.Shared._AdressPartial


<div class="container">
    <div class="d-flex flex-row">
        <label class="flex-column">Sokak: </label>
        <p id="@("street" + (Model.Id??""))" class="flex-column">@Model.Address.Street</p>
        @if (Model.Editable)
        {
            <a href="javascript:void(0);" onclick="this.previousSibling.setAttribute('contenteditable', 'true')" class="text-decoration-none  col">
                <i class="bi bi-pencil-fill bg-white text-secondary" style="height: 1em;"></i>
            </a>
        }
