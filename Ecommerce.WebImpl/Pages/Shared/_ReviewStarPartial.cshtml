@model Ecommerce.WebImpl.Pages.Shared._ReviewStarPartial

<div class="flex-column align-content-center justify-content-center">
    <div class="d-flex justify-content-center">
        @{ var roundedRating = (int)Math.Round(Model.Rating, MidpointRounding.ToZero); }
        @for (int i = 0; i < roundedRating; i++){
            <i class="px-0 mx-0 img-fluid bi bi-star-fill text-warning"  style="height: 2em;background-color: inherit;"></i>
        }
        @for (int i = 0; i < 5 - roundedRating; i++){
            <i class="px-0 mx-0 img-fluid bi bi-star text-secondary" style="height: 2em;background-color: inherit;"></i>
        }
    </div>
    @if (Model.RatingCount != null){
        <div class="text-center">
            @if (Model.RatingCount > 0){
                <p class="small">@Model.RatingCount Adet Değerlendirme</p>
            }
            else{
                <p class="small">Değerlendirme Yok</p>
            }
        </div>
    }
</div>
