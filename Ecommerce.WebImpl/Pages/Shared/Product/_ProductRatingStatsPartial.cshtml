@using Ecommerce.Entity
@model Ecommerce.WebImpl.Pages.Shared.Product._ProductRatingStatsPartial
@functions{
    static uint Percent(uint c, uint t) => t != 0 ? (uint)(c / (float)t * 100f) : 0u;
}
<div class="rating-stats-container">
    <script>
        ((s) => {
            document.addEventListener('DOMContentLoaded', initializeRatingStats);
            s.parentElement.addEventListener('htmx:load', initializeRatingStats);
            function initializeRatingStats(e) {
                if(e.type === 'htmx:load'){
                    e.stopPropagation();
                }
                const parentElement = s.parentElement;
                
                // Initialize custom properties on the parent element
                parentElement._selectedRating = null;
                parentElement._sortBy = '@(nameof(ProductReview.Created))';
                parentElement._sortOrder = 'desc';
                parentElement._reviewCount = @(Model.ReviewStats.ReviewCount??0);
                parentElement._ratingStats = {
                    fiveStars: @Model.ReviewStats.FiveStarCount,
                    fourStars: @Model.ReviewStats.FourStarCount,
                    threeStars: @Model.ReviewStats.ThreeStarCount,
                    twoStars: @Model.ReviewStats.TwoStarCount,
                    OneStarCount: @Model.ReviewStats.OneStarCount
                };
                
                // Add click event listeners to rating rows
                const ratingRows = parentElement.querySelectorAll('[data-rating]');
                ratingRows.forEach(row => {
                    row.addEventListener('click', function() {
                        const rating = this.getAttribute('data-rating');
                        
                        // Remove previous selection
                        ratingRows.forEach(r => r.classList.remove('selected'));
                        
                        // Toggle selection
                        if (parentElement._selectedRating === rating) {
                            parentElement._selectedRating = null;
                            parentElement.removeAttribute('data-selected-rating');
                        } else {
                            parentElement._selectedRating = rating;
                            parentElement.setAttribute('data-selected-rating', rating);
                            this.classList.add('selected');
                        }
                        
                        // Dispatch change event
                        const changeEvent = new CustomEvent('change', {
                            detail: { 
                                selectedRating: parseInt(parentElement._selectedRating),
                                sortBy: parentElement._sortBy,
                                sortOrder: parentElement._sortOrder
                            },
                            bubbles: true,cancelable:true
                        });
                        parentElement.dispatchEvent(changeEvent);
                    });
                });
                
                // Add event listeners to sort controls
                const sortBySelect = parentElement.querySelector('[data-sort-by]');
                const sortOrderSelect = parentElement.querySelector('[data-sort-order]');
                
                if (sortBySelect) {
                    sortBySelect.addEventListener('change', function(e) {
                        e.stopPropagation();
                        parentElement._sortBy = event.currentTarget.value;
                        dispatchSortChange();
                    });
                }
                
                if (sortOrderSelect) {
                    sortOrderSelect.addEventListener('change', function(e) {
                        e.stopPropagation();
                        parentElement._sortOrder = event.currentTarget.value;
                        dispatchSortChange();
                    });
                }
                
                function dispatchSortChange() {
                    const changeEvent = new CustomEvent('change', {
                        detail: { 
                            selectedRating: parentElement._selectedRating ? parseInt(parentElement._selectedRating) : null,
                            sortBy: parentElement._sortBy,
                            sortOrder: parentElement._sortOrder
                        },
                        bubbles: true,cancelable:true
                    });
                    parentElement.dispatchEvent(changeEvent);
                }
                
                console.log('initialized ProductRatingStats from ' + e.type);
            }
        })(document.currentScript);
        //# sourceURL=ProductRatingStatsPartial.js
    </script>
    
    <!-- Total reviews count -->
    <div class="mb-3">
        <h6 class="fw-bold">@(Model.ReviewStats.ReviewCount??0) Reviews</h6>
    </div>
    
    <!-- Sort controls -->
    <div class="mb-3 d-flex gap-2 align-items-center">
        <small class="text-muted">Sırala:</small>
        <select class="form-select form-select-sm" data-sort-by style="width: auto;">
            <option value="@(nameof(ProductReview.Created))">Tarih</option>
            <option value="@(nameof(ProductReview.Rating))">Değerlendirme</option>
        </select>
        <select class="form-select form-select-sm" data-sort-order style="width: auto;">
            <option value="desc">Azalan</option>
            <option value="asc">Artan</option>
        </select>
    </div>
    
    <!-- Rating breakdown -->
    <div class="rating-breakdown">
        <!-- 5 Stars -->
        <div class="rating-row d-flex align-items-center mb-2 p-2 rounded cursor-pointer" data-rating="5">
            <div class="stars me-2">
                @for (int i = 0; i < 5; i++)
                {
                    <i class="bi bi-star-fill text-warning"></i>
                }
            </div>
            <div class="review-count me-2 text-muted" style="min-width: 40px;">
                @Model.ReviewStats.FiveStarCount
            </div>
            <div class="progress flex-grow-1 me-2" style="height: 8px;">
                <div class="progress-bar bg-warning rounded-pill" 
                     style="width: @(Percent(Model.ReviewStats.FiveStarCount??0, Model.ReviewStats.ReviewCount??0))%"></div>
            </div>
            <div class="percentage text-muted" style="min-width: 35px;">
                @(Percent(Model.ReviewStats.FiveStarCount??0, Model.ReviewStats.ReviewCount??0))%
            </div>
        </div>
        
        <!-- 4 Stars -->
        <div class="rating-row d-flex align-items-center mb-2 p-2 rounded cursor-pointer" data-rating="4">
            <div class="stars me-2">
                @for (int i = 0; i < 4; i++)
                {
                    <i class="bi bi-star-fill text-warning"></i>
                }
                <i class="bi bi-star-fill text-muted"></i>
            </div>
            <div class="review-count me-2 text-muted" style="min-width: 40px;">
                @Model.ReviewStats.FourStarCount
            </div>
            <div class="progress flex-grow-1 me-2" style="height: 8px;">
                <div class="progress-bar bg-warning rounded-pill" 
                     style="width: @(Percent(Model.ReviewStats.FourStarCount??0, Model.ReviewStats.ReviewCount??0))%"></div>
            </div>
            <div class="percentage text-muted" style="min-width: 35px;">
                @(Percent(Model.ReviewStats.FourStarCount??0, Model.ReviewStats.ReviewCount??0))%
            </div>
        </div>
        
        <!-- 3 Stars -->
        <div class="rating-row d-flex align-items-center mb-2 p-2 rounded cursor-pointer" data-rating="3">
            <div class="stars me-2">
                @for (int i = 0; i < 3; i++)
                {
                    <i class="bi bi-star-fill text-warning"></i>
                }
                @for (int i = 0; i < 2; i++)
                {
                    <i class="bi bi-star-fill text-muted"></i>
                }
            </div>
            <div class="review-count me-2 text-muted" style="min-width: 40px;">
                @Model.ReviewStats.ThreeStarCount
            </div>
            <div class="progress flex-grow-1 me-2" style="height: 8px;">
                <div class="progress-bar bg-warning rounded-pill" 
                     style="width: @(Percent(Model.ReviewStats.ThreeStarCount??0, Model.ReviewStats.ReviewCount??0))%"></div>
            </div>
            <div class="percentage text-muted" style="min-width: 35px;">
                @(Percent(Model.ReviewStats.ThreeStarCount??0, Model.ReviewStats.ReviewCount??0))%
            </div>
        </div>
        
        <!-- 2 Stars -->
        <div class="rating-row d-flex align-items-center mb-2 p-2 rounded cursor-pointer" data-rating="2">
            <div class="stars me-2">
                @for (int i = 0; i < 2; i++)
                {
                    <i class="bi bi-star-fill text-warning"></i>
                }
                @for (int i = 0; i < 3; i++)
                {
                    <i class="bi bi-star-fill text-muted"></i>
                }
            </div>
            <div class="review-count me-2 text-muted" style="min-width: 40px;">
                @Model.ReviewStats.TwoStarCount
            </div>
            <div class="progress flex-grow-1 me-2" style="height: 8px;">
                <div class="progress-bar bg-warning rounded-pill" 
                     style="width: @(Percent(Model.ReviewStats.TwoStarCount??0, Model.ReviewStats.ReviewCount??0))%"></div>
            </div>
            <div class="percentage text-muted" style="min-width: 35px;">
                @(Percent(Model.ReviewStats.TwoStarCount??0, Model.ReviewStats.ReviewCount??0))%
            </div>
        </div>
        
        <!-- 1 Star -->
        <div class="rating-row d-flex align-items-center mb-2 p-2 rounded cursor-pointer" data-rating="1">
            <div class="stars me-2">
                <i class="bi bi-star-fill text-warning"></i>
                @for (int i = 0; i < 4; i++)
                {
                    <i class="bi bi-star-fill text-muted"></i>
                }
            </div>
            <div class="review-count me-2 text-muted" style="min-width: 40px;">
                @Model.ReviewStats.OneStarCount
            </div>
            <div class="progress flex-grow-1 me-2" style="height: 8px;">
                <div class="progress-bar bg-warning rounded-pill" 
                     style="width: @(Percent(Model.ReviewStats.OneStarCount??0, Model.ReviewStats.ReviewCount??0))%"></div>
            </div>
            <div class="percentage text-muted" style="min-width: 35px;">
                @(Percent(Model.ReviewStats.OneStarCount??0, Model.ReviewStats.ReviewCount??0))%
            </div>
        </div>
    </div>
    
    <style>
        .rating-stats-container .cursor-pointer {
            cursor: pointer;
        }
        
        .rating-stats-container .rating-row:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }
        
        .rating-stats-container .rating-row.selected {
            background-color: rgba(255, 193, 7, 0.2);
            border: 1px solid #ffc107;
        }
        
        .rating-stats-container .progress {
            border-radius: 10px;
            background-color: #e9ecef;
        }
        
        .rating-stats-container .progress-bar {
            border-radius: 10px;
        }
        
        .rating-stats-container .stars {
            min-width: 80px;
        }
    </style>
</div>
