@model _CartItemsPartial

<div class="col-12 row border-bottom pb-5 mt-3">
    <style>
        .cart-item-card {
            transition: all 0.3s ease;
        }
        .cart-item-card:hover {
            transform: translateY(-2px);
        }
        .option-tag {
            background-color: #e3f2fd;
            color: #1565c0;
            font-size: 0.75rem;
            padding: 2px 8px;
            border-radius: 8px;
            margin: 1px;
            display: inline-block;
        }
        .discount-badge {
            font-size: 0.75rem;
            padding: 2px 6px;
            border-radius: 12px;
            font-weight: 600;
        }
        .product-discount {
            background-color: #d4edda;
            color: #155724;
        }
    </style>
    <script>((s)=>{
            document.addEventListener("DOMContentLoaded", load);
            s.parentElement.addEventListener('htmx:load', load);
            function  load(e){
                if(e.type==='htmx:load') {
                    e.stopPropagation();
                    s.nextElementSibling.querySelectorAll('.promptable').forEach(el=>el.dispatchEvent(new Event('htmx:load', {cancelable: true, bubbles:false})));
                }
            }
        })(document.currentScript)</script>
    <div class="col-12 col-lg-9">
        <div class="d-flex align-items-center mb-4">
            <div>
                <h3 class="fw-bold mb-1">Sepetiniz</h3>
                <p class="text-muted mb-0">@(Model.ViewedCart.Aggregates.ItemCount) ürün</p>
            </div>
        </div>
        @if (Model.ViewedCart.Aggregates.ItemCount > 0){
            foreach (var item in Model.ViewedCart.Items.OrderBy(o=>o.ProductId).ThenBy(o=>o.SellerId)){
                <div class="card cart-item-card mb-3 shadow-sm hover-grow-small">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                @{
                                    var data = item.ProductOffer.Product.MainImage?.Data;
                                    data = !string.IsNullOrEmpty(data) ? (data.StartsWith("data:") ? data : ("data:image/jpeg;base64," + data)) : "/default.jpg";
                                }
                                <img src="@(data)" class="img-fluid rounded" style="max-height: 80px; max-width: 80px; object-fit: cover;" alt="Image of @item.ProductOffer.Product.Name"/>
                            </div>
                            <div class="col-md-2">
                                <h6 class="mb-1 fw-semibold">@(item.ProductOffer.Product.Name)</h6>
                                <small class="text-muted">@item.ProductOffer.Seller.ShopName</small>
                                @if (item.SelectedOptions != null && item.SelectedOptions.Any()){
                                    <div class="mt-1">
                                        @foreach (var option in item.SelectedOptions){
                                            <span class="option-tag">@option.Property.CategoryProperty.PropertyName: @option.Value</span>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="col-md-3">
                                @if (item.CouponId != null){
                                    <div class="d-flex flex-column align-items-center">
                                        <span class="badge bg-warning text-dark mb-1">@(item.CouponId)</span>
                                        <form hx-trigger="submit" hx-post="/@(nameof(Cart))?handler=deleteCoupon&FromCart=true" hx-on::before-swap="if(event.detail.xhr.status >=300 || event.detail.xhr.status <200) event.detail.target=document.getElementById('popupResult');" hx-target="#@(Model.ContainerId)" hx-swap="innerHTML">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="productId" value="@item.ProductId"/>
                                            <input type="hidden" name="sellerId" value="@item.SellerId"/>
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                }
                                else{
                                    @await Html.PartialAsync("Shared/_PromptablePartial", new _PromptablePartial(){
                                        DisplayText = "Kupon Ekle",
                                        Inputs = [new("productId", "hidden", item.ProductId.ToString()), new("sellerId", "hidden", item.SellerId.ToString()), new(nameof(Cart.CouponId)){PlaceHolder = "Kupon Kodu"}], 
                                        Url = $"/{nameof(Cart)}?handler=coupon&FromCart=true",Target = "#" + Model.ContainerId, Classes = "btn btn-sm btn-outline-primary", FormClasses = "d-inline"
                                    })
                                }
                            </div>
                            <div class="col-md-2 text-center">
                                @if (item.ProductOffer.Discount != 1m){
                                    <div class="mb-1">
                                        <del class="small text-muted">@(decimal.Round(item.ProductOffer.Price, 2).ToString("C"))</del>
                                        <span class="discount-badge product-discount ms-1">
                                            %@(decimal.Round((1m - item.ProductOffer.Discount) * 100m, 1).ToString("F1"))
                                        </span>
                                    </div>
                                }
                                <div class="fw-bold text-primary">@(decimal.Round(item.ProductOffer.Price * item.ProductOffer.Discount, 2).ToString("C"))</div>
                            </div>
                            <div class="col-md-1 text-center">
                                <div class="d-flex align-items-center justify-content-center">
                                    <form hx-target="#@(Model.ContainerId)" hx-post="/Cart?FromCart=true" class="me-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@(item.ProductId)"/>
                                        <input type="hidden" name="sellerId" value="@(item.SellerId)"/>
                                        <input type="hidden" name="quantity" value="-1"/>
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                    </form>
                                    <span class="fw-semibold mx-2">@item.Quantity</span>
                                    <form hx-target="#@(Model.ContainerId)" hx-post="/Cart?FromCart=true" class="ms-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@(item.ProductId)"/>
                                        <input type="hidden" name="sellerId" value="@(item.SellerId)"/>
                                        <input type="hidden" name="quantity" value="1"/>
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-2 text-center">
                                <partial name="Shared/_ItemPricePartial" model="item.Aggregates"/>
                                <form method="post" hx-target="#@(Model.ContainerId)" hx-swap="innerHTML" hx-post="/Cart?handler=delete&FromCart=true" class="mt-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="sellerId" value="@item.SellerId"/>
                                    <input type="hidden" name="productId" value="@item.ProductId"/>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else{
            <div class="text-center py-5">
                <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
                <h5 class="text-muted mt-3">Sepetiniz Boş</h5>
                <p class="text-muted">Alışverişe başlamak için ürün ekleyin</p>
            </div>
        }
    </div>
    <div class="col-12 col-lg-3">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="fw-bold mb-0">Sipariş Özeti</h5>
            </div>
            <div class="card-body">
            
                @if (Model.ViewedCart.Aggregates.ItemCount > 0){
                    @if (Model.ViewedCart.Aggregates.BasePrice > Model.ViewedCart.Aggregates.DiscountedPrice){
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Ara Toplam</span>
                            <span>@(decimal.Round(Model.ViewedCart.Aggregates.BasePrice, 2).ToString("C"))</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-success small">Ürün İndirimleri</span>
                            <span class="text-success">
                                -@(decimal.Round(Model.ViewedCart.Aggregates.DiscountAmount, 2).ToString("C"))
                            </span>
                        </div>
                    }
                    @if (Model.ViewedCart.Aggregates.DiscountedPrice > Model.ViewedCart.Aggregates.CouponDiscountedPrice){
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-warning small">Kupon İndirimleri</span>
                            <span class="text-warning">
                                -@(decimal.Round(Model.ViewedCart.Aggregates.DiscountedPrice - Model.ViewedCart.Aggregates.CouponDiscountedPrice, 2).ToString("C"))
                            </span>
                        </div>
                    }
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="fw-bold">Toplam</span>
                        <span class="fw-bold text-primary">@(decimal.Round(Model.ViewedCart.Aggregates.CouponDiscountedPrice, 2).ToString("C"))</span>
                    </div>
                    <form asp-page="/@(nameof(Checkout))" method="get" class="d-grid mb-2">
                        <button class="btn btn-success">Sepeti Onayla</button>
                    </form>
                    <form hx-trigger="submit" hx-post="/@(nameof(Cart))?handler=clear&FromCart=true" hx-target="#@(Model.ContainerId)" hx-swap="innerHTML">
                        @Html.AntiForgeryToken() 
                        <button type="submit" class="btn btn-outline-secondary btn-sm w-100 mt-2">
                            Sepeti Temizle
                        </button>
                    </form>
                }
                else{
                    <button class="btn btn-secondary disabled w-100">Sepeti Onayla</button>
                }


            </div>
        </div>
    </div>
</div>
